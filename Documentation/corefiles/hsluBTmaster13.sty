\newcommand{\noncopynumber}[1]{\BeginAccSupp{method=escape,ActualText={}}#1\EndAccSupp{}}%
\newcommand{\lstsethslu}[3]{%
\lstset{%
    escapeinside={(*@}{@*)},
    numberstyle=\noncopynumber,
    columns=flexible,
    showspaces=false,
    showtabs=false,
    language={#1},
    numbers=left,
    backgroundcolor=\color{grey1},
    frame=single,
    showstringspaces=false,
    basicstyle=\footnotesize\ttfamily,
    keywordstyle=\bfseries\color{grey3},
    commentstyle=\itshape\color{grey2},
    captionpos=b,
    caption={\selectfont\hspace{4mm}{#2}},
    label={#3},
    upquote=true,
    literate=%
    {Ö}{{\"O}}1
    {Ä}{{\"A}}1
    {Ü}{{\"U}}1
    {ü}{{\"u}}1
    {ä}{{\"a}}1
    {ö}{{\"o}}1
    {~}{{\textasciitilde}}1
}%
}%
